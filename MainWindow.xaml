<Window x:Class="HomeWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="500" MinWidth="500">
    <StackPanel>
        <Grid>
            <TextBox x:Name="X" HorizontalAlignment="Left" Margin="24,4,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="Y" HorizontalAlignment="Left" Margin="171,4,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
            <Label Content="X" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Top"/>
            <Label Content="Y" HorizontalAlignment="Left" Margin="149,0,0,0" VerticalAlignment="Top"/>
            <Label x:Name="Result" Content="Результат: 2" HorizontalAlignment="Left" Margin="417,0,0,0" VerticalAlignment="Top" Width="383"/>
            <Button Content="Расчитать" Click="Calculate" HorizontalAlignment="Left" Margin="327,4,0,0" VerticalAlignment="Top"/>
        </Grid>
    </StackPanel>
</Window>
